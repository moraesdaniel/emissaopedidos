CREATE TABLE ITEM (
	ID_ITEM		INTEGER			NOT NULL,
	DESC_ITEM	VARCHAR(100)	NOT NULL
)

ALTER TABLE ITEM ADD CONSTRAINT PK_ITEM PRIMARY KEY(ID_ITEM)

CREATE GENERATOR GEN_ID_ITEM

CREATE TRIGGER TR_GEN_ID_ITEM FOR ITEM
ACTIVE
BEFORE INSERT
AS
BEGIN
	IF (NEW.ID_ITEM IS NULL) THEN BEGIN
		NEW.ID_ITEM = GEN_ID(GEN_ID_ITEM, 1);
	END
END