CREATE TABLE PEDIDOCAB (
	ID_PED		INTEGER			NOT NULL,
	DTEMISSAO	DATE			NOT NULL,
	NUMERO		INTEGER			NOT NULL,
	CLIENTE		VARCHAR(100)	NOT NULL
)

ALTER TABLE PEDIDOCAB ADD CONSTRAINT PK_PEDIDOCAB PRIMARY KEY(ID_PED)

CREATE GENERATOR GEN_ID_PED

CREATE TRIGGER TR_GEN_ID_PED FOR PEDIDOCAB
ACTIVE
BEFORE INSERT
AS
BEGIN
	IF (NEW.ID_PED IS NULL) THEN BEGIN
		NEW.ID_PED = GEN_ID(GEN_ID_PED, 1);
	END
END