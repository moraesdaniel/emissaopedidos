CREATE TABLE PEDIDOITEM (
	ID_PED		INTEGER			NOT NULL,
	ID_ITEM 	INTEGER			NOT NULL,
	ID_ITEMSEQ	INTEGER			NOT NULL,
	QUANTIDADE	NUMERIC(15,2)	NOT NULL,
	VALORUNIT	NUMERIC(15,2)	NOT NULL
)

ALTER TABLE PEDIDOITEM ADD CONSTRAINT PK_PEDIDOITEM PRIMARY KEY(ID_PED, ID_ITEM, ID_ITEMSEQ)

ALTER TABLE PEDIDOITEM ADD CONSTRAINT 
FK_PEDITEM_ITEM FOREIGN KEY (ID_ITEM) REFERENCES ITEM (ID_ITEM)
	
ALTER TABLE PEDIDOITEM ADD CONSTRAINT 
FK_PEDITEM_PEDCAB FOREIGN KEY (ID_PED) REFERENCES PEDIDOCAB (ID_PED)